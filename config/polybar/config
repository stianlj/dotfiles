[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
active_background = ${xrdb:color6}
active_foreground = ${xrdb:color0}
urgent_background = ${xrdb:color1}
urgent_foreground = ${xrdb:color0}
unfocused_background = ${xrdb:color8}
cyan = ${xrdb:color4} 
yellow = ${xrdb:color11}
green = ${xrdb:color12}
blue = ${xrdb:color6}
grey = ${xrdb:color0}
purple = ${xrdb:color13}
deep_orange = ${xrdb:nordColor12}
red = ${xrdb:color1}

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 2
format = <label>
format-underline = ${colors.cyan}
label =  %temperature%

[module/filesystem]
type = internal/fs
interval = 10
fixed-values = true
format-mounted = <label-mounted>
format-mounted-underline = ${colors.purple}
label-mounted = %mountpoint%: %free%/%total%
include-file = ~/.config/polybar/mounts.ini

[module/network]
type = internal/network
interface = ${env:WIRED_ETHERNET_INTERFACE}
interval = 3.0
accumulate-stats = true
format-connected = <label-connected>
format-connected-underline = ${colors.deep_orange}
label-connected = %local_ip% %downspeed:9% %upspeed:9%
label-connected-foreground = #eefafafa

[module/battery-combined-shell]
type = custom/script
exec = ~/.config/polybar/scripts/battery-combined-shell.sh
interval = 10

[module/cpu]
format-label = internal/cpu
format = <label> <ramp-coreload>
format-underline = ${colors.green}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
type = internal/cpu
interval = 2
label = 

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-underline = ${colors.red}
label =  %gb_used%/%gb_total%

[module/title]
type = internal/xwindow
format-underline = ${colors.yellow}
label = %title%
label-maxlen = 50

[module/date]
type = internal/date
date = %d-%m-%Y %H:%M
date-alt = %%{F#fba922}%A%%{F#ff}, %d. %b %Y, Week: %W
format-underline = ${colors.purple}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default =  
label-focused = %name%: %icon%
label-focused-foreground = ${colors.active_foreground}
label-focused-background = ${colors.active_background}
label-focused-padding = 2
label-dimmed = %name%: %icon%
label-dimmed-padding = 2
label-occupied = %name%: %icon%
label-occupied-padding = 2
label-urgent = %name%: %icon%
label-urgent-foreground = ${colors.urgent_foreground}
label-urgent-background = ${colors.urgent_background}
label-urgent-padding = 2
label-empty = %name%: %icon%
label-empty-foreground = ${colors.unfocused_background}
label-empty-padding = 2

[bar/left]
monitor = ${env:LEFT_MONITOR}
width = 100%
height = 35
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Knack:size=10;0
font-1 = MaterialIcons:size=10;0
font-2 = Termsynu:size=8;-1
font-3 = FontAwesome:size=10;0
locale = en_US.UTF-8
modules-right = bspwm
module-margin = 0
padding = 0
enable-ipc = true

[bar/right]
monitor = ${env:RIGHT_MONITOR}
width = 100%
height = 35
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Knack:size=10;0
font-1 = MaterialIcons:size=10;0
font-2 = Termsynu:size=8;-1
font-3 = FontAwesome:size=10;0
locale = en_US.UTF-8
modules-left = bspwm
enable-ipc = true

[bar/middle-work-laptop]
monitor = ${env:CENTER_MONITOR}
width = 100%
height = 35
bottom = ${env:CENTER_POLYBAR_BOTTOM}
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 1
underline-color = ${colors.red}
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
font-0 = Knack:size=12;2
font-1 = MaterialIcons:size=10;0
font-2 = Termsynu:size=12;-1
font-3 = FontAwesome:size=12;0
separator = :
locale = en_US.UTF-8
modules-left = bspwm title
modules-right = battery-combined-shell cpu temperature memory date
tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0
enable-ipc = true

[bar/middle-main-desktop]
monitor = ${env:CENTER_MONITOR}
width = 100%
height = 25
bottom = ${env:CENTER_POLYBAR_BOTTOM}
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 1
underline-color = ${colors.red}
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
font-0 = Knack:size=10;2
font-1 = MaterialIcons:size=8;0
font-2 = Termsynu:size=10;-1
font-3 = FontAwesome:size=10;0
separator = :
locale = en_US.UTF-8
modules-left = bspwm title
modules-right = network cpu temperature memory date
tray-position = right
tray-detached = false
tray-maxsize = 16
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0
enable-ipc = true

