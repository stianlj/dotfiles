dark_grey = #616161
blue_grey = #607D8B
black = #222220
white = #fafafa

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 2
format = <label>
format-underline = ${colors.cyan}
label =  %temperature%

[module/filesystem]
type = internal/fs
interval = 10
fixed-values = true
format-mounted = <label-mounted>
format-mounted-underline = ${colors.purple}
label-mounted = %mountpoint%: %free%/%total%
include-file = ~/.config/polybar/mounts.ini

[module/network]
type = internal/network
interface = ${env:WIRED_ETHERNET_INTERFACE}
interval = 3.0
accumulate-stats = true
format-connected = <label-connected>
format-connected-underline = ${colors.deep_orange}
label-connected = %local_ip% %downspeed:9% %upspeed:9%
label-connected-foreground = #eefafafa

[module/battery-combined-shell]
type = custom/script
exec = ~/.config/polybar/scripts/battery-combined-shell.sh
interval = 10

[module/cpu]
format-label = internal/cpu
format = <label> <ramp-coreload>
format-underline = ${colors.green}
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
type = internal/cpu
interval = 2
label = 

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-underline = ${colors.red}
label =  %gb_used%/%gb_total%

[module/title]
type = internal/xwindow
format-underline = ${colors.yellow}
label = %title%
label-maxlen = 50

[module/date]
type = internal/date
date = %d-%m-%Y %H:%M
date-alt = %%{F#fba922}%A%%{F#ff}, %d. %b %Y, Week: %W
format-underline = ${colors.grey}

[module/i3]
type = internal/i3
