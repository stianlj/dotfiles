#! /bin/sh

wid=$1
class=$2
instance=$3

current_monitor_id=$(bspc wm -d | jq '.focusedMonitorId')
current_monitor_name=$(bspc wm -d | jq -r ".monitors[] | select(.id | contains($current_monitor_id)) | .name")
current_monitor_width=$(xwininfo -name $current_monitor_name | grep 'Width' | cut -d ':' -f2 | sed 's/ //g')
current_monitor_height=$(xwininfo -name $current_monitor_name | grep 'Height' | cut -d ':' -f2 | sed 's/ //g')
current_monitor_position_start=$(xwininfo -name $current_monitor_name | grep 'Absolute upper-left X' | cut -d ':' -f2 | sed 's/ //g')

popup() {
  percent_width=$1
  percent_height=$2
  percent_from_top=$3

  width=$(((current_monitor_width * percent_width ) / 100))
  height=$(((current_monitor_height * percent_height ) / 100))

  xdotool \
    windowsize $wid $width $height \
    windowmove $wid $((current_monitor_position_start + ((current_monitor_width / 2) - (width / 2)))) $(((current_monitor_height * percent_from_top) / 100)) \
    windowactivate $wid
}

if [ "$instance" = "pass-popup" ]; then
  echo "state=floating"
  echo "focus=on"
  popup 30 20 10
  exit 0
fi

if [ "$instance" = "ncmpcpp-popup" ]; then
  echo "state=floating"
  echo "focus=on"
  popup 80 80 10
  exit 0
fi

if [ "$instance" = "ranger-popup" ]; then
  echo "state=floating"
  echo "focus=on"
  popup 80 80 10
  exit 0
fi

if [ "$instance" = "blueman-manager" ]; then
  echo "state=floating"
  echo "focus=on"
  popup 50 50 20
  exit 0
fi
